<main class="main-content p-5" role="main">
  <div class="row">
    <div class="col-md-12">

      <h1>{{title}}</h1>
    </div>
    <div class="col-lg-12">
      {{#if message}}
      {{#if message_status}}

      <div class="alert alert-{{message_status}}" role="alert">
        {{message}}
      </div>
      {{/if}}
      {{/if}}
      <form action="/events/events-submit" method="post" name="Admin_Api_Conf">
        <div class="form-group">
          <label class="active">Start time</label>
          <!-- <input type="text" class="form-control" id="product_name" name = "product_name" placeholder="Enter Product ame" 
          {{#if product_name}} value = "{{~product_name~}}" {{/if}}  required= true>  -->
          <input size="16" type="text" value="2012-06-15 14:45" name="start_time"  class="form_datetime">
        </div>
        <div class="form-group">
          <label >End Time</label>
          <input size="16" type="text" value="2012-06-15 14:45" name="end_time" class="form_datetime">
          <div></div>
        </div>
        <div class="form-group">
      {{#if users}}
        <select class="selectpicker" multiple name="user_list">
          {{#each users}}
            <option value={{id}}>{{username}}</option>
          {{/each}}
      {{/if}}
        </select>
      </div>      
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</main>

<script type="text/javascript">
    $(".form_datetime").datetimepicker({format: 'yyyy-mm-dd hh:ii'});
</script>                     

