{{#if pagination}}

<nav aria-label="...">

  <ul class="pagination justify-content-center">
    {{#if pagination.previousPage}}
    <li class="page-item">
      {{#if pagination.urlParams}}
      <a class="page-link" href="{{ pagination.urlParams}}&page={{pagination.previousPage}}">Previous </a>
      {{else}}
      <a class="page-link" href="?page={{pagination.previousPage}}">Previous </a>
      {{/if}}
    </li>
    {{else}}
    <li class="page-item disabled">
      <a class="page-link" href="#">Previous</a>
    </li>
    {{/if}}

    {{#for pagination.min_limit pagination.currentPage 1}}
    {{#ifCond this '==' @root.pagination.currentPage}}
    <li class="page-item active">
      {{#if ../pagination.urlParams}}
      <a class="page-link" href="{{ ../pagination.urlParams}}&page={{this}}">{{this}}</a>
      {{else}}
      <a class="page-link" href="?page={{this}}">{{this}}</a>
      {{/if}}
    </li>
    {{else}}
    <li class="page-item">
      {{#if ../pagination.urlParams}}
      <a class="page-link" href="{{ ../pagination.urlParams}}&page={{this}}">{{this}}</a>
      {{else}}
      <a class="page-link" href="?page={{this}}">{{this}}</a>
      {{/if}}
    </li>
    {{/ifCond}}
    {{/for}}

    {{#if pagination.nextPage}}
    {{#for pagination.nextPage pagination.max_limit  1}}
    <li class="page-item">
      {{#if ../pagination.urlParams}}
      <a class="page-link" href="{{ ../pagination.urlParams}}&page={{this}}">{{this}}</a>
      {{else}}
      <a class="page-link" href="?page={{this}}">{{this}}</a>
      {{/if}}
    </li>
    {{/for}}
    {{/if}}

    {{#if pagination.nextPage}}
    <li>
      {{#if pagination.urlParams}}
      <a class="page-link" href="{{ pagination.urlParams}}&page={{pagination.nextPage}}">Next </a>
      {{else}}
      <a class="page-link" href="?page={{pagination.nextPage}}">Next </a>
      {{/if}}
    </li>
    {{else}}
    <li class="page-item disabled">
      <a class="page-link" href="#">Next</a>
    </li>
    {{/if}}
  </ul>
  <div class="text-center">
    Page {{pagination.currentPage}} of {{pagination.totalPages}}
  </div>
</nav>
{{/if}}